<Page x:Class="ClubManagement.Views.ConfirmClubPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClubManagement.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmClubPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단바 -->
        <Grid Background="LightGray" Grid.Row="0">
            <Image Source="pack://application:,,,/Resources/kumohImg.jpg" HorizontalAlignment="Left"/>
            <Button Content="뒤로 가기" HorizontalAlignment="Right"
                    BorderThickness="0"
                    Click="Go_Back"/>
        </Grid>
        <ScrollViewer Margin="20" Grid.Row="1">
            <StackPanel x:Name="ClubApplicationStackPanel">
                <!-- 동아리 신설 신청 항목을 계속 추가 -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
