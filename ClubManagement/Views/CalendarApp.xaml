<Page x:Class="ClubManagement.Views.CalendarApp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClubManagement.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalendarApp">

    <Grid>
        <Calendar Name="EventCalendar" SelectedDatesChanged="EventCalendar_SelectedDatesChanged" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ListBox Name="EventListBox" HorizontalAlignment="Right" Width="400" VerticalAlignment="Top" Height="200" Margin="0,10,10,0" SelectionChanged="EventListBox_SelectionChanged"/>
        <TextBlock Name="EventDetailsTextBlock" TextWrapping="Wrap" Margin="10" HorizontalAlignment="Right" Width="400" VerticalAlignment="Bottom" Height="200"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Name="AddEventButton" Content="Add Event" Click="AddEventButton_Click" Margin="0,0,10,0"/>
            <Button Name="EditEventButton" Content="Edit Event" Click="EditEventButton_Click" Margin="0,0,10,0"/>
            <Button Name="DeleteEventButton" Content="Delete Event" Click="DeleteEventButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
